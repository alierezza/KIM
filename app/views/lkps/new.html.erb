<%= link_to "back", dashboards_path %></br>

<%= form_for(@lkp) do |f| %>

<%= f.label "Tanggal Kejadian", "Tanggal Kejadian" %>
<%= f.date_field :tanggal_kejadian, :required=>true %></br>

<%= f.label "Jam Kejadian", "Jam Kejadian" %>
<%= f.text_field :jam_kejadian, :required=>true %></br>

<%= f.label "Lokasi Kejadian", "Lokasi Kejadian" %>
<%= f.text_field :lokasi_kejadian, :required=>true %></br>

<%= f.label "Bentuk Kejadian", "Bentuk Kejadian" %>

<%= f.radio_button :bentuk_kejadian, "Kecelakaan Kerja", :checked => false, :required=>true %>
<%= f.label "Kecelakaan Kerja","Kecelakaan Kerja" %>
<%= f.radio_button :bentuk_kejadian, "Kecelakaan Sarfas", :checked => false, :required=>true %>
<%= f.label "Kecelakaan Sarfas", "Kecelakaan Sarfas" %>
<%= f.radio_button :bentuk_kejadian, "Kebakaran", :checked => false, :required=>true %>
<%= f.label "Kebakaran", "Kebakaran" %>
<%= f.radio_button :bentuk_kejadian, "Kecelakaan Lalu Lintas", :checked => false, :required=>true %>
<%= f.label "Kecelakaan Lalu Lintas", "Kecelakaan Lalu Lintas" %>
<%= f.radio_button :bentuk_kejadian, "Lain-lain", :checked => false, :required=>true %>
<%= f.label "Lain-lain", "Lain-lain" %></br>


<%= f.label "Kronologis", "Kronologis" %>
<%= f.text_area :kronologis, :required=>true %></br>

<%= f.label "Sebab Kecelakaan", "Sebab Kecelakaan" %>
<%= f.text_area :sebab_kecelakaan, :required=>true %></br>

<%= f.label "Akibat Yang Ditimbulkan", "Akibat Yang Ditimbulkan" %></br>
<%= f.label "Korban", "Korban" %>
<%= f.number_field :korban, :required=>true %></br>

<%= f.label "Kerugian Materi", "Kerugian Materi" %>
<%= f.number_field :kerugian_materi, :required=>true %></br>

<%= f.label "Gangguan Operasi", "Gangguan Operasi" %>
<%= f.text_field :gangguan_operasi, :required=>true %></br>

<%= f.label "Upaya Penanggulangan" %>
<%= f.text_area :upaya_penanggulangan, :required=>true %></br>

<%= f.label "Saran Pencegahan", "Saran Pencegahan" %>
<%= f.text_area :saran_pencegahan, :required=>true %></br>


<%= f.submit "Submit" %>

<% end %>