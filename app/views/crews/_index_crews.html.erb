<div class='inner-body'>
	<div class='panel panel-default'>
		<div class='panel-heading'>
			<h3 class="panel-title">Crew List</h3>
		</div>
		<div class='panel-body'>
			<%= link_to "Add Crew", new_crew_path, class: "btn btn-primary" %>
			<table class="table">
			<thead>
				<th>Email for login</th>
				<th>Email Recovery</th>
				<th>Nama</th>
				<Th colspan=2></th>
			</thead>
			<tbody>
				<% @crews.each_with_index do |crew| %>
					<tr>
						<td><%= crew.email %></td>
						<td><%= crew.email_recovery %></td>
						<td><%= crew.nama %></td>
						<td><%= link_to edit_crew_path(crew), class: "btn btn-xs btn-default", 'data-disable-with'=> "Wait.." do %><span class="glyphicon glyphicon-pencil"></span> Update<% end %></td>
						<td><%= link_to crew_path(crew), :method=>"DELETE", :data => {:confirm => 'Are you sure?'}, class: "btn btn-xs btn-danger", 'data-disable-with'=> "Wait.." do %><span class="glyphicon glyphicon-remove"></span> Delete<% end %></td>
					</tr>
				<% end %>
			</tbody>
			</table>
			<%= paginate @crews %>
		</div>
	</div>
</div>