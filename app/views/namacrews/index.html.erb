<div class='inner-body'>
	<div class='panel panel-default'>
		<div class='panel-heading'>
			<h3 class="panel-title">Crew List</h3>
		</div>
		<div class='panel-body'>
			<%= link_to "Add Crew", new_namacrew_path, class: "btn btn-primary" %>
			<table class="table">
			<thead>
				<th>Nama</th>
				<th>Alamat</th>
				<th>Telp</th>
				<Th colspan=2></th>
			</thead>
			<tbody>
				<% @crews.each_with_index do |crew| %>
					<tr>
						<td><%= crew.nama %></td>
						<td><%= crew.alamat %></td>
						<td><%= crew.telp %></td>
						<td><%= link_to edit_namacrew_path(crew), class: "btn btn-xs btn-default", 'data-disable-with'=> "Wait.." do %><span class="glyphicon glyphicon-pencil"></span> Update<% end %></td>
						<td><%= link_to namacrew_path(crew), :method=>"DELETE", :data => {:confirm => 'Anda yakin ?'}, class: "btn btn-xs btn-danger", 'data-disable-with'=> "Wait.." do %><span class="glyphicon glyphicon-remove"></span> Delete<% end %></td>
					</tr>
				<% end %>
			</tbody>
			</table>
			<%= paginate @crews %>
		</div>
	</div>
</div>