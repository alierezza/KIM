<div class='inner-body'>
	<div class='panel panel-default'>
		<div class='panel-heading'>
			<h3 class="panel-title">Edit Info</h3>
		</div>
		<div class='panel-body'>
			<%= form_for(@user, url: dashboard_path(@user), :method=>"PUT") do |f| %>

			<div class="form-group">
				<%= f.label "Nama", class: "control-label" %>
				<%= f.text_field :nama, :readonly=>true, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label "Email for Login", class: "control-label" %>
				<%= f.text_field :email, :readonly=>true, class: "form-control" %></br>
			</div>
			<div class="form-group">
				<%= f.label "Email Recovery", class: "control-label" %>
				<%= f.text_field :email_recovery, :required=>true, class: "form-control" %></br>
			</div>
			<div class="form-group">
				<%= f.label "Alamat", class: "control-label" %>
				<%= f.text_area :alamat, :required=>true , class: "form-control"%></br>
			</div>
			<div class="form-group">
				<%= f.label "Telp", class: "control-label" %>
				<%= f.number_field :telp, :required=>true, class: "form-control" %></br>
			</div>
			<div class="form-group">
				<%= f.label "Fax", class: "control-label" %>
				<%= f.number_field :fax, class: "form-control" %></br>
			</div>
			<div class="form-group">
				<%= f.label "Profile Picture", class: "control-label" %>
				<%= f.file_field :photo %></br>
			</div>
			<div class="form-group">
				<%= f.label "Profile picture sekarang", class: "control-label" %>
				<%= image_tag @user.photo.url(:medium), class: "img-thumbnail" %></br>
			</div>

			<div class='bottom-field row'>
				<div class='pull-right'>
					<%= link_to "back", dashboards_path , class: 'btn btn-default', style: "margin-right: 10px;" %>
					<%= f.submit "Save", class: 'btn btn-primary' %>
				</div>
			</div>
		</div>
	</div>
</div>

<% end %>