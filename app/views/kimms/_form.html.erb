<%= form_for(@kim) do |f| %>

	<%= f.label "Jenis SIM","Jenis SIM" %>
	<%= f.radio_button :jenis_sim, "B1", :checked => true %>
    <%= f.label "B1", "B1", :value => "true"  %>
    <%= f.radio_button :jenis_sim, "B2" %>
    <%= f.label "B2", "B2", :value => "false" %></br>
 
 	<%= f.label "Masa Berlaku SIM","Masa Berlaku SIM" %>
    <%= f.date_field :masa_berlaku_sim, :required=>true %></br>

    <%= f.label "Upload SIM" %>
    <%= f.file_field :sim, :required=>true %></br>
    <% if params[:action] == "update" or params[:action] == "edit" %>
        <%= image_tag @kim.sim.url(:medium) %>
    <% end %></br>

    <%= f.label "Masa Berlaku STNK","Masa Berlaku STNK" %>
    <%= f.date_field :masa_berlaku_stnk, :required=>true %></br>

    <%= f.label "Upload stnk" %>
    <%= f.file_field :stnk, :required=>true %></br>
    <% if params[:action] == "update" or params[:action] == "edit" %>
        <%= image_tag @kim.stnk.url(:medium) %>
    <% end %></br>

    <%= f.label "Masa Berlaku KIR","Masa Berlaku KIR" %>
    <%= f.date_field :masa_berlaku_kir, :required=>true %></br>

    <%= f.label "Upload KIR" %>
    <%= f.file_field :kir, :required=>true %></br>
    <% if params[:action] == "update" or params[:action] == "edit" %>
        <%= image_tag @kim.kir.url(:medium) %>
    <% end %></br>

    <%= f.label "Masa Berlaku TERA","Masa Berlaku TERA" %>
    <%= f.date_field :masa_berlaku_tera, :required=>true %></br>

    <%= f.label "Upload TERA" %>
    <%= f.file_field :tera, :required=>true %></br>
    <% if params[:action] == "update" or params[:action] == "edit" %>
        <%= image_tag @kim.tera.url(:medium) %>
    <% end %></br>

    <%= f.label "Upload KTP" %>
    <%= f.file_field :ktp, :required=>true %></br>
    <% if params[:action] == "update" or params[:action] == "edit" %>
        <%= image_tag @kim.ktp.url(:medium) %>
    <% end %></br>

    <%= f.label "Upload Surat Permohonan" %>
    <%= f.file_field :surat_permohonan, :required=>true %></br>
    <% if params[:action] == "update" or params[:action] == "edit" %>
        <%= image_tag @kim.surat_permohonan.url(:medium) %>
    <% end %></br>

    <%= f.label "No Polisi" %>
    <%= f.text_field :no_polisi, :required=>true %></br>

    <%= f.label "Tipe","Tipe" %>
	<%= f.radio_button :tipe, "Skid Tank", :checked => true %>
    <%= f.label "Skid Tank", "Skid Tank", :value => "true"  %>
    <%= f.radio_button :tipe, "Truck Tabung 3KG" %>
    <%= f.label "Truck Tabung 3KG", "Truck Tabung 3KG", :value => "false" %>
    <%= f.radio_button :tipe, "Truck Tabung 12KG" %>
    <%= f.label "Truck Tabung 12KG", "Truck Tabung 12KG", :value => "false" %></br>

    <%= f.label "Kapasitas Tangki" %>
    <%= f.number_field :kapasitas_tangki, :required=>true %></br>




	<%= f.submit "Submit" %>

<% end %>